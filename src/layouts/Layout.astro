---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import React from "react";
import CookiesNotification from "../components/CookiesNotification";
import CookiesInformation from "../pages/cookies-information.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<CookiesNotification client:load />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	/* Import the fonts */
	@import url("https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Merriweather:wght@400;700&display=swap");

	* {
		margin: 0px;
		padding: 0px;
	}

	/* Set up global body styles */
	body {
		font-family: "Lato", sans-serif;
		color: #333333;
		background-color: #ffffff;
		line-height: 1.6;
		font-size: 16px; /* Base font size */
	}

	/* Global styles for headings */
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: "Merriweather", serif;
		color: #333333;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	h1 {
		font-size: 3rem; /* 48px */
		font-weight: 700;
	}

	h2 {
		font-size: 2.25rem; /* 36px */
		font-weight: 700;
	}

	h3 {
		font-family: "Lato", sans-serif;
		font-size: 1.875rem; /* 30px */
		font-weight: 700;
	}

	h4 {
		font-family: "Lato", sans-serif;
		font-size: 1.5rem; /* 24px */
		font-weight: 700;
	}

	h5 {
		font-family: "Lato", sans-serif;
		font-size: 1.25rem; /* 20px */
		font-weight: 500;
	}

	h6 {
		font-family: "Lato", sans-serif;
		font-size: 1.125rem; /* 18px */
		font-weight: 500;
	}

	/* Global styles for paragraphs and other text elements */
	p {
		font-size: 1rem; /* 16px */
		font-weight: 400;
		line-height: 1.6;
	}

	.body-large {
		font-size: 1.125rem; /* 18px */
		font-weight: 400;
		line-height: 1.6;
	}

	.body-small {
		font-size: 0.875rem; /* 14px */
		font-weight: 400;
		line-height: 1.6;
	}

	/* Global styles for buttons */
	button {
		font-family: "Lato", sans-serif;
		font-size: 1rem; /* 16px */
		font-weight: 700;
		letter-spacing: 0.5px;
	}

	/* Secondary button styles */
	.btn-secondary {
		font-size: 0.875rem; /* 14px */
		font-weight: 700;
		letter-spacing: 0.5px;
	}
	svg {
		cursor: pointer;
	}
	/* Navigation styles */
	nav a {
		font-family: "Lato", sans-serif;
		font-size: 1rem; /* 16px */
		font-weight: 700;
	}

	nav a.sub {
		font-size: 0.875rem; /* 14px */
		font-weight: 400;
	}

	/* Caption and overline styles */
	.caption {
		font-family: "Merriweather", serif;
		font-size: 0.75rem; /* 12px */
		font-weight: 400;
	}

	.overline {
		font-family: "Lato", sans-serif;
		font-size: 0.75rem; /* 12px */
		font-weight: 700;
		letter-spacing: 1px;
	}
	.text-1 {
		font-weight: 500;
		font-size: 12px;
	} 
	a {
		text-decoration: none;
	}
</style>

