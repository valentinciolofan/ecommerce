---
import Layout from "../layouts/Layout.astro";
---

<Layout title="fashionCulture | Login">
    <div class="login-container">
        <div class="login-page-image">
            <img src="images/loginpageimg.png" />
        </div>
        <div class="form-container">
            <div class="form-container-col">
                <h4 class="form-container-col-title">Sign In</h4>
                <p class="text-1">
                    Enter your details below in order to access your account
                </p>
            </div>
            <form method="post">
                <input
                    type="text"
                    placeholder="Enter your email address"
                    name="email"
                    required
                />
                <input
                    type="password"
                    placeholder="Enter your password"
                    name="password"
                    required
                />
                <div class="remember-me-and-forgot-pass">
                    <span>
                        <label for="rememberMe" class="text-1">
                            <input
                                id="rememberMe"
                                type="checkbox"
                                name="remember"
                                value="remember"
                            />
                            <span class="custom-checkbox"></span>
                            Remember me
                        </label>
                    </span>
                    <a href="#" class="password-forgot text-1"
                        >Forgot your password?</a
                    >
                </div>
                <input type="submit" value="Login" />
                <p class="form-container-p-to-register text-1">
                    Don't have an account?<a
                        href="/register"
                        class="form-link-redirect-to-page"><b> Register</b></a
                    >
                </p>
            </form>

            <div class="login-form-container-footer">
                <div class="login-form-container-links">
                    <span
                        ><a
                            href="/cookies-information"
                            class="form-link-redirect-to-page">Cookies</a
                        ></span
                    >
                    <span
                        ><a
                            href="/privacy-policy"
                            class="form-link-redirect-to-page">Legal Policy</a
                        ></span
                    >
                    <span>&copy; Copyright 2024</span>
                </div>
            </div>
        </div>
    </div>

    <style>
        .login-container {
            padding: 0px 20px;
            display: flex;
            max-width: 1400px;
            justify-content: space-between;
            margin: 100px auto 0px;
        }

        .login-page-image {
            max-width: 50%;
            animation: slideInLeft 0.8s ease-out;
        }

        .login-page-image img {
            max-width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-container {
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 0px 20px;
            flex-grow: 1;
            gap: 20px;
            position: relative;
            animation: slideInRight 0.8s ease-out;
        }

        .form-container-col-title {
            text-transform: uppercase;
            color: #333333;
        }

        .form-container form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 15px;
        }

        input[type="text"],
        input[type="password"] {
            padding: 10px;
            background-color: transparent;
            border: none;
            border-bottom: 2px solid #3333;
            outline: none;
            transition: border-color 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: black;
        }

        input[type="submit"] {
            background-color: black;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 0;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #333;
        }

        .remember-me-and-forgot-pass {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .remember-me-and-forgot-pass label {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .remember-me-and-forgot-pass input[type="checkbox"] {
            opacity: 0;
            position: absolute;
            cursor: pointer;
        }

        .custom-checkbox {
            width: 20px;
            height: 20px;
            background-color: white;
            border: 1px solid #ccc;
            display: inline-block;
            position: relative;
            margin-right: 10px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .remember-me-and-forgot-pass input[type="checkbox"]:checked
            ~ .custom-checkbox {
            background-color: black;
            border-color: black;
        }

        .remember-me-and-forgot-pass
            input[type="checkbox"]:checked
            ~ .custom-checkbox::after {
            content: "âœ”";
            color: white;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 14px;
        }

        .form-link-redirect-to-page {
            color: #333;
        }

        .form-link-redirect-to-page:hover {
            text-decoration: underline;
        }
        .form-container-p-to-register {
            text-align: center;
        }
        .login-form-container-footer {
            position: absolute;
            bottom: 0;
            right: 25%;
            padding-bottom: 40px;
        }

        .login-form-container-links {
            display: flex;
            gap: 10px;
        }

        @media screen and (max-width: 767px) {
            .login-container {
                flex-direction: column;
                align-items: center;
                margin: 200px auto;
            }

            .login-page-image {
                display: none;
            }

            .form-container {
                width: 100%;
                padding: 20px;
            }
            .login-form-container-footer {
                display: none;
            }
        }

        /* Slide-in animations */
        @keyframes slideInLeft {
            from {
                transform: translateX(-20%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes slideInRight {
            from {
                transform: translateX(20%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>

    <script>
        const url: string = "http://localhost:3000/login";
        
        async function onSubmit(url: string, data: Record<string, FormDataEntryValue>) {
            try {
                const response = await fetch(url, {
                    method: "POST",
                    credentials: "include",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                } else {
                    const res = await response.json();
                    window.location.href = res.redirect;
                }
            } catch (error) {
                console.error("Error:", error);
            }
        }

        function handleSubmit(event: Event): void {
            event.preventDefault();

            const form = event.target as HTMLFormElement;
            const data = new FormData(form);
            const values = Object.fromEntries(data.entries());

            console.log(values);
            onSubmit(url, values);
        }

        document.addEventListener("DOMContentLoaded", () => {
            const form = document.querySelector("form");
            if (form) {
                form.addEventListener("submit", handleSubmit);
            }
        });
    </script>
</Layout>
