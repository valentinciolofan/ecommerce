---
import React from "react";
import UserActions from "./ReactComponents/Header/UserActions";
import SearchBar from "./ReactComponents/Searchbar";
---

<header>
    <div class="header-container">
        <div class="header-wrapper">
            <div class="logo-and-hamburger">
                <button class="btn-open-nav">☰</button>
                <a href="/" class="logo">fashionCulture</a>
            </div>
            <nav class="nav-container">
                <div class="nav-content">
                    <a href="javascript:void(0)" class="btn-close-nav">✖</a>
                    <a href="/">Home</a>
                    <a href="/shop">Products</a>
                    <a href="/about-us">About Us</a>
                    <a href="/contact">Contact Us</a>
                </div>
            </nav>

            <div class="action-elements">
                <UserActions client:only />
            </div>
        </div>
        <div class="searchBox">
            <SearchBar client:load />
        </div>
    </div>
</header>

<style>
    @import url("https://fonts.cdnfonts.com/css/ballpark");

    header {
        width: 100%;
        position: fixed;
        top: 0;
        padding-bottom: 10px;
        z-index: 1000;
        background-color: #fff;
        padding: 20px 0;
        transition: box-shadow 0.3s ease, background-color 0.3s ease;
    }
    header.scrolled {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.95);
    }
    .searchBox {
        padding: 0px 20px;
    }
    .logo-and-hamburger {
        display: flex;
        gap: 20px;
    }
    .logo {
        font-size: 1.5em;
        font-family: "Ballpark", sans-serif;
        color: #000;
        font-weight: 700;
        text-decoration: none;
    }
    .header-container {
    }
    .header-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0px 20px;
    }
    .action-elements {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .btn-open-nav {
        display: none;
        font-size: 30px;
        background: none;
        border: none;
        cursor: pointer;
        font-family: "Lato", sans-serif;
        color: #000;
    }
    .nav-container {
        position: fixed;
        top: 0;
        left: -100%;
        max-width: 450px;
        height: 100%;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
        transition: left 0.3s ease;
        z-index: 1001;
        display: flex;
        flex-direction: column;
    }
    .nav-container.open {
        left: 0;
        background-color: #fff;
    }
    .nav-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
    nav a {
        text-decoration: none;
        text-transform: uppercase;
        font-family: "Lato", sans-serif;
        color: #000;
        position: relative;
        padding-bottom: 5px;
        
    }
    nav a::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 1px;
        background-color: black;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
    }
    nav a:hover::after {
        transform: scaleX(1);
    }
    .btn-close-nav {
        align-self: flex-end;
        font-size: 24px;
        cursor: pointer;
        padding: 15px
    }
    @media (min-width: 768px) {
        .searchBox {
            display: none;
        }
        .logo {
            font-size: 2rem;
        }
    }
    @media (max-width: 1025px) {
        .btn-open-nav {
            display: block;
        }
        .nav-container {
            width: 100%;
        }
        .nav-container.open {
            left: 0;
        }
        nav {
            display: none;
        }
    }
    @media (min-width: 1024px) {
        .logo-and-hamburger {
            min-width: 25%;
        }
        .nav-container {
            position: static;
            width: auto;
            height: auto;
            box-shadow: none;
            transition: none;
            display: flex;
            flex-direction: row;
            justify-content: center;
            min-width: 50%;
        }
        .nav-content {
            flex-direction: row;
            align-items: center;
            gap: 44px;
            padding: 0;
        }
        .action-elements {
            min-width: 25%;
        }
        .btn-close-nav {
            display: none;
        }
        .btn-open-nav {
            display: none;
        }
        .header-container {
            display: flex;
            justify-content: center;
        }
        .header-wrapper {
            max-width: 1400px;
            flex-grow: 1;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const openNav = document.querySelector(".btn-open-nav");
        const closeNav = document.querySelector(".btn-close-nav");
        const navContainer = document.querySelector(".nav-container");
        const header = document.querySelector("header");

        // Ensure elements are not null before proceeding
        if (openNav && closeNav && navContainer) {
            openNav.addEventListener("click", () => {
                navContainer.classList.toggle("open");
            });

            closeNav.addEventListener("click", () => {
                navContainer.classList.toggle("open");
            });
        }

        // Add scroll event listener to handle header animation
        window.addEventListener("scroll", () => {
            if (header) {
                if (window.scrollY > 50) {
                    header.classList.add("scrolled");
                } else {
                    header.classList.remove("scrolled");
                }
            }
        });
    });
</script>
