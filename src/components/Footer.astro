      gap: 20px;
    }
    .footer-title p {
        text-transform: uppercase;
        cursor: default;
    }
    .footer-links {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
  
    .footer-links span a {
      color: #fff;
      text-decoration: none;
      transition: color 0.3s;
    }
  
    .footer-links span a:hover {
      color: #ccc;
    }
  
    @media (max-width: 768px) {
      .footer-container {
        gap: 20px;
      }
  
      .footer-columns {
        flex-direction: column;
        gap: 20px;
      }
  
      .footer-column {
        gap: 15px;
      }
    }
